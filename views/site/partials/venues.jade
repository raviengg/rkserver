#venues.section.section-venues(ng-controller='venuesController')
    .container
        .section-title.rounded
            h2 Venues
        ul.mozitos-cards.row
            li.col-xs-12.col-sm-6.col-md-3(ng-repeat="v in venues")
                .mozitos-card.mozitos-card-venue.rounded
                    .mozitos-card-header
                        .row
                            .col-xs-3.col-sm-3.col-md-4
                                .mozitos-card-icon.mozitos-card-icon-venue.rounded
                                    img.img-responsive(src='img/star.png')
                            .col-xs-9.col-sm-9.col-md-8.heading
                                h4 {{v.name}}
                    a(ng-href='/venues/{{v._id}}')
                        .mozitos-card-image(style='background-image: url({{v.image}})')
                    .mozitos-card-footer
                        .row
                            .col-xs-10
                                a.mozitos-card-footer-link(ng-href='/venues/{{v._id}}')
                                    | {{v.address}}
                                .col-xs-2
                                    .venue-status.venue-status-closed
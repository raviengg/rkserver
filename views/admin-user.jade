doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/stylesheets/jquery-ui-1.10.4.custom.min.css')
        //link(rel='stylesheet', href='/stylesheets/jquery.datetimepicker.css')
        script(data-main='/javascripts/app' src='/javascripts/lib/require.js')
        //script(data-main='/javascripts/app' src='/javascripts/lib/jquery.datetimepicker.js')
    body
    a(href='/') Back

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Age:
                |  <span id='userInfoAge'></span>
                br
                strong Gender:
                |  <span id='userInfoGender'></span>
                br
                strong Location:
                |  <span id='userInfoLocation'></span>
                br
                button#edit Edit
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='gender')
                br
                select#Is Read-Only
                    option(value="N") No
                    option(value="Y") Yes
                br
                input#inputAddedBy(type='text', placeholder='Added By')
                br
                select#Active Flag
                    option(value="Y") Yes
                    option(value="N") No
                br    
                input#inputStartDate.date(type='text',placeholder='Start Date')
                //input#inputStarttime.time(type='text',placeholder='Start Date')
                //input#inputStartDate.datetimepicker().datetimepicker({startDate: new Date(),step:1});
                br
                button#btnAddUser Add User
        // /ADD USER

    // /WRAPPER